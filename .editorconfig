# .editorconfig -- Config file for EditorConfig. http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h}]
indent_style = space
indent_size = 4

[{src/include/local/vcio.h,src/include/qmkl/raspberrypi-firmware.h}]
indent_style = tab
indent_size = 8
tab_size = 8

[*.{qasm2m4,qasm2,qbin,qhex}]
indent_style = space
indent_size = 4

[*{CMakeLists.txt,.cmake}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
