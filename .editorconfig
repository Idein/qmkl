# .editorconfig -- Config file for EditorConfig. http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h}]
indent_style = space
indent_size = 4

[*.{qasm2m4,qasm2,qbin,qhex}]
indent_style = space
indent_size = 4

[*{CMakeLists.txt,.cmake}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
